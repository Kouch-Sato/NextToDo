<div class="container">
  <h1>タスクを編集してください</h1>
  <div class="container">
    <%= form_for (@task) do |f| %>
    <div class="form">
      <div class="form-body">
        <%= f.text_field :title, :class => "form-control"  %>
      </div>
      <div class="form-body">
        <%= f.label :body, "詳細を書くことができます。" %>
        <%= f.text_area :body, :class => "form-control"  %>
      </div>
      <div class="form-body">
        <%= f.label :due_date, "締め切りは？" %><br>
        <%= f.date_select :due_date, :class => "form-control"  %>
      </div>
      <div class="form-body">
        <%= f.label :status, "ステータスを変更できます。" %><br>
        <%= f.select :status, [["未着手", 1], ["実行中", 2], ["完了済み", 3]], :class => "form-control"  %>
      </div>
      <div class="form-body">
        <%= f.label :label, "ラベルをつけましょう。" %><br>
        <%= f.radio_button :label, 1 %>
        <%= f.label :label_1, "red", :class => "label label-red" %>
        <%= f.radio_button :label, 2 %>
        <%= f.label :label_2, "yellow", :class => "label label-yellow" %>
        <%= f.radio_button :label, 3 %>
        <%= f.label :label_3, "green", :class => "label label-green" %>
        <%= f.radio_button :label, 4 %>
        <%= f.label :label_4, "blue", :class => "label label-blue" %>
      </div>
      <br>
      <div class="form-body">
        <%= f.submit "投稿", :class => "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>  