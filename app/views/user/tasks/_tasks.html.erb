<table class="table">
  <% tasks.each do |task| %>
    <tr>
    <td>

      <div class="move-botton">
        <% if task.yet? %>
          <!-- 実行中へのボタン --> 
          <%= form_for [:user, task] do |f| %>
            <div class="form">
              <%= f.hidden_field :status, value: "doing" %>
              <div class="form-group">
                <%= button_tag :type => "submit", :class => "btn btn-info" do %> 
                  <i class="glyphicon glyphicon-play"></i>
                <% end %> 
              </div>
            </div>
          <% end %>
        <% elsif task.doing? %>
          <!-- 完了済みのボタン --> 
          <%= form_for [:user, task] do |f| %>
            <div class="form upgrade-button">
              <%= f.hidden_field :status, value: "done" %>
              <div class="form-group">
                <%= button_tag :type => "submit", :class => "btn btn-primary" do %> 
                  <i class="glyphicon glyphicon-play"></i>
                <% end %>  
              </div>
            </div>
          <% end %>
        <% elsif task.done? %>
          <div></div>
          <div class="form-group">
            <%= button_to(user_task_path(task), method: :delete, class: "btn btn-danger") do %>
              <i class="glyphicon glyphicon-remove"></i>
            <% end %>
          </div>  
        <% end %> 
      </div>  

      <div class="image-wrapper">
        <%= image_tag task.user.image.url, class: "task-user-image" %>
      </div> 

      <span class="label-color-box" style="background:<%= task.label %>;">
      </span>
      <%= link_to(edit_user_task_path(task)) do %>
        <div class="task-title">
          <%= task.title %>
        </div>
      <% end %>

      <div class="group-name">
        <% if task.group_id == 0 %>
        　個人タスク
        <% else %>
          <%= task.group.name %>  
        <% end %>  
      </div>
  
    </td>
    </tr>
  <% end %>
</table>
<%= paginate tasks, param_name: param_name, :class => "pagenation-bar" %>