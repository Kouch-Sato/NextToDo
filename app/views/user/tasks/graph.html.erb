<div class="container">
  <h1>自分の投稿の統計を見ることができます。</h1>
  <h3 class="graph-title">ラベルの統計</h3>
  <%= pie_chart @current_user.tasks.group(:label).count %>
  <h3 class="graph-title">ステータスの統計</h3>
  <%= pie_chart @current_user.tasks.group(:status).count, colors: ["gray", "blue", "black"] %>
</div>

<table class="table table-sortable">
  <% @tasks.each do |task| %>
    <tr class="item" data="{ model_name: '<%= task.class.name.underscore %>', update_url: '<%= user_task_sort_path(task) %>' }">
    <td>
      <div class="task-title">
        <%= task.title %>
      </div>
    </td>
    </tr>
  <% end %>
</table>