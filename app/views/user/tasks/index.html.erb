<div class="container">
  <%= image_tag @current_user.image.url, class: "current_user-image" %>

  <!-- 新規登録フォーム -->
  <div class="task-new-form">
    <%= render partial: "partials/error_message", locals: { thing: @task } %>
    <%= form_for [:user, @task] do |f| %>
    <div class="form">
      <div class="form-inline">
        <%= f.text_field :title, :class => "form-control", style: "width: 800px;" %>
        <%= f.submit "投稿", :class => "btn btn-success" %>
      </div>
    </div>
    <% end %>
  </div>
  <br>

  <!-- ソートフォーム -->
  <div class="search-form">
    <%= form_tag(user_tasks_path, method: "get") do %>
      <%= select_tag :label, options_for_select(Task.labels), :include_blank => true %>
      <%= submit_tag "検索", :class => "btn btn-success" %>
    <% end %>
  </div>

  <div class="tables">
    <div class="table-wrapper">
      <p class="table-title">未着手のタスク</p>
      <div id="table1">
        <%= render :partial => 'tasks', locals: { tasks: @yet_tasks, param_name: "yet_tasks_page" } %>
      </div>
    </div>    
    <div class="table-wrapper">
      <p class="table-title">実行中のタスク</p>
      <div id="table2">
        <%= render :partial => 'tasks', locals: { tasks: @doing_tasks, param_name: "doing_tasks_page" } %>
      </div>
    </div>  
    <div class="table-wrapper">
      <p class="table-title">完了したタスク</p>
      <div id="table3">
        <%= render :partial => 'tasks', locals: { tasks: @done_tasks, param_name: "done_tasks_page" } %>
      </div>  
    </div>
    <div class="table-wrapper"> 
      <p class="table-title">終了期限が近いタスク</p> 
      <div id="table5">
        <%= render :partial => 'tasks', locals: { tasks: @alert_tasks, param_name: "alert_tasks_page" } %>
      </div>
    </div>
  </div>  
</div>
