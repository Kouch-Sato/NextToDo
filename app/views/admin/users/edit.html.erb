<div class="container">
  <%= render partial: "partials/error_message", locals: { thing: @user } %>
  <%= form_for (@user) do |f| %>
  <div class="form-group">
    <%= f.text_field :name, :class => "form_control", :placeholder => "Name" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, :class => "form_control", :placeholder => "Email" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, :class => "form_control", :placeholder => "Password" %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, :class => "form_control" %>
  </div>
  <div class="form-group">
    <%= f.submit "変更", :class => "btn btn-success" %>
  </div>
  <% end %>
</div>